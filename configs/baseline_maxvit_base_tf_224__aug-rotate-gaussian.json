{
    "model_name": "maxvit_base_tf_224",
    "data_dir": ".",
    "splits_dir": "data/splits",
    "checkpoint_dir": "checkpoints/baseline",

    "hyperparameters": {
        "batch_size": 32,
        "num_epochs": 10,
        "learning_rate": 0.0001
    },

    "transformations": {
  "steps": [
    { "name": "random_rotation", "params": { "degrees": 25 } },
    { "name": "gaussian_blur", "params": { "kernel_size": 3, "sigma": [0.1, 0.8] } },
    { "name": "affine", "params": {"translate": [0.15, 0.15], "scale": [0.8, 1.2], "shear": 12 } }
  ]
}
}